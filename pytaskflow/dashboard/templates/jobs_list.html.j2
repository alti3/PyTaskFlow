{% extends "_layout.html.j2" %}
{% from "_macros.html.j2" import render_job_row %}

{% block content %}
    <h1 class="mb-4">Jobs: <span class="text-capitalize">{{ status }}</span></h1>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Task</th>
                        <th scope="col">Status</th>
                        <th scope="col">Created</th>
                        <th scope="col">Updated</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if jobs %}
                        {% for job in jobs %}
                            {{ render_job_row(job) }}
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No {{ status }} jobs found.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    {% if jobs %}
        <div class="mt-4">
            {% include "_pagination.html.j2" %}
        </div>
    {% endif %}
{% endblock %}
