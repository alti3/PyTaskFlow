{% extends "_layout.html.j2" %}
{% from "_macros.html.j2" import render_job_row %}

{% block content %}
    {% set status_key = status | lower %}
    {% if status_key == "succeeded" %}
        {% set status_badge = "border-emerald-200 bg-emerald-50 text-emerald-700" %}
        {% set status_dot = "bg-emerald-500" %}
        {% set status_pulse = "" %}
    {% elif status_key == "failed" %}
        {% set status_badge = "border-rose-200 bg-rose-50 text-rose-700" %}
        {% set status_dot = "bg-rose-500" %}
        {% set status_pulse = "" %}
    {% elif status_key == "processing" %}
        {% set status_badge = "border-amber-200 bg-amber-50 text-amber-700" %}
        {% set status_dot = "bg-amber-500" %}
        {% set status_pulse = "processing-pulse" %}
    {% elif status_key == "enqueued" %}
        {% set status_badge = "border-sky-200 bg-sky-50 text-sky-700" %}
        {% set status_dot = "bg-sky-500" %}
        {% set status_pulse = "" %}
    {% elif status_key == "awaiting" %}
        {% set status_badge = "border-indigo-200 bg-indigo-50 text-indigo-700" %}
        {% set status_dot = "bg-indigo-500" %}
        {% set status_pulse = "" %}
    {% elif status_key == "cancelled" %}
        {% set status_badge = "border-orange-200 bg-orange-50 text-orange-700" %}
        {% set status_dot = "bg-orange-500" %}
        {% set status_pulse = "" %}
    {% else %}
        {% set status_badge = "border-slate-200 bg-slate-50 text-slate-600" %}
        {% set status_dot = "bg-slate-400" %}
        {% set status_pulse = "" %}
    {% endif %}

    <div class="mb-6 space-y-1">
        <h1 class="text-2xl font-semibold tracking-tight">Jobs</h1>
        <p class="text-sm text-slate-500">
            Showing
            <span class="inline-flex items-center gap-2 rounded-full border px-2.5 py-1 text-xs font-semibold {{ status_badge }}">
                <span class="h-2 w-2 rounded-full {{ status_dot }} {{ status_pulse }}"></span>
                <span class="capitalize">{{ status }}</span>
            </span>
            jobs and their current execution status.
        </p>
    </div>

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200 text-sm">
                <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-wider text-slate-500">
                    <tr>
                        <th scope="col" class="px-4 py-3">ID</th>
                        <th scope="col" class="px-4 py-3">Task</th>
                        <th scope="col" class="px-4 py-3">Queue</th>
                        <th scope="col" class="px-4 py-3">State</th>
                        <th scope="col" class="px-4 py-3">Created</th>
                        <th scope="col" class="px-4 py-3">Retries</th>
                        <th scope="col" class="px-4 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    {% if jobs %}
                        {% for job in jobs %}
                            {{ render_job_row(job) }}
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="7" class="px-4 py-8 text-center text-sm text-slate-500">No {{ status }} jobs found.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    {% if jobs %}
        <div class="mt-5">
            {% include "_pagination.html.j2" %}
        </div>
    {% endif %}
{% endblock %}
