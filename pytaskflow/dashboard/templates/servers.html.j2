{% extends "_layout.html.j2" %}

{% block content %}
    <div class="mb-6 space-y-1">
        <h1 class="text-2xl font-semibold tracking-tight">Servers</h1>
        <p class="text-sm text-slate-500">Active workers, queues, and heartbeat freshness.</p>
    </div>

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200 text-sm">
                <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-wider text-slate-500">
                    <tr>
                        <th scope="col" class="px-4 py-3">ID</th>
                        <th scope="col" class="px-4 py-3">Workers</th>
                        <th scope="col" class="px-4 py-3">Queues</th>
                        <th scope="col" class="px-4 py-3">Last Heartbeat</th>
                        <th scope="col" class="px-4 py-3">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    {% if servers %}
                        {% for server in servers %}
                            <tr class="transition hover:bg-slate-50">
                                <td class="px-4 py-3 text-xs font-medium text-slate-500">{{ server.id }}</td>
                                <td class="px-4 py-3 text-sm text-slate-600">{{ server.worker_count }}</td>
                                <td class="px-4 py-3 text-sm text-slate-600">{{ server.queues | join(", ") }}</td>
                                <td class="px-4 py-3 text-sm text-slate-600">{{ server.last_heartbeat }}</td>
                                <td class="px-4 py-3">
                                    <span class="inline-flex items-center rounded-full border border-emerald-200 bg-emerald-50 px-2.5 py-1 text-xs font-semibold text-emerald-700">Active</span>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="px-4 py-8 text-center text-sm text-slate-500">No active servers found.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
