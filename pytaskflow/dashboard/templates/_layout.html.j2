<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PyTaskFlow Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', path='css/pytaskflow.css') }}">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ url_for('home') }}">PyTaskFlow</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('list_jobs_by_status', status='Enqueued') }}">Enqueued</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('list_jobs_by_status', status='Processing') }}">Processing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('list_jobs_by_status', status='Succeeded') }}">Succeeded</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('list_jobs_by_status', status='Failed') }}">Failed</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('list_jobs_by_status', status='Deleted') }}">Deleted</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('list_jobs_by_status', status='Awaiting') }}">Awaiting</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('list_jobs_by_status', status='Cancelled') }}">Cancelled</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('recurring_jobs') }}">Recurring</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('servers') }}">Servers</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        {% block content %}{% endblock %}
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">PyTaskFlow Dashboard</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ url_for('static', path='js/dashboard.js') }}"></script>
</body>
</html>
