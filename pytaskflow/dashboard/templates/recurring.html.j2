{% extends "_layout.html.j2" %}

{% block content %}
    <h1 class="mb-4">Recurring Jobs</h1>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Task</th>
                        <th scope="col">Cron</th>
                        <th scope="col">Last Execution</th>
                    </tr>
                </thead>
                <tbody>
                    {% if jobs %}
                        {% for job in jobs %}
                            <tr>
                                <td>{{ job.id }}</td>
                                <td>
                                    <code>{{ job.job.target_module }}.{{ job.job.target_function }}</code>
                                </td>
                                <td>{{ job.cron }}</td>
                                <td>{{ job.last_execution or "â€”" }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No recurring jobs found.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    {% if jobs %}
        <div class="mt-4">
            {% include "_pagination.html.j2" %}
        </div>
    {% endif %}
{% endblock %}
