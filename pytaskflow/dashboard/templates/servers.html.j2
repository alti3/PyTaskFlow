{% extends "_layout.html.j2" %}

{% block content %}
    <h1 class="mb-4">Servers</h1>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Workers</th>
                        <th scope="col">Queues</th>
                        <th scope="col">Last Heartbeat</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% if servers %}
                        {% for server in servers %}
                            <tr>
                                <td>{{ server.id }}</td>
                                <td>{{ server.worker_count }}</td>
                                <td>{{ server.queues | join(", ") }}</td>
                                <td>{{ server.last_heartbeat }}</td>
                                <td><span class="badge bg-success">Active</span></td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">No active servers found.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
