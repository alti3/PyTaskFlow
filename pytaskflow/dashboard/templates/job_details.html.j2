{% extends "_layout.html.j2" %}

{% block content %}
    <div class="mb-6 space-y-1">
        <h1 class="text-2xl font-semibold tracking-tight">Job Details</h1>
        <p class="text-sm text-slate-500">Inspection view for a single job and its execution history.</p>
    </div>

    {% if job %}
        {% set state = job.state_name | lower %}
        {% if state == "succeeded" %}
            {% set badge_classes = "border-emerald-200 bg-emerald-50 text-emerald-700" %}
            {% set accent_border = "border-t-emerald-400" %}
        {% elif state == "failed" %}
            {% set badge_classes = "border-rose-200 bg-rose-50 text-rose-700" %}
            {% set accent_border = "border-t-rose-400" %}
        {% elif state == "processing" %}
            {% set badge_classes = "border-amber-200 bg-amber-50 text-amber-700" %}
            {% set accent_border = "border-t-amber-400" %}
        {% elif state == "enqueued" %}
            {% set badge_classes = "border-sky-200 bg-sky-50 text-sky-700" %}
            {% set accent_border = "border-t-sky-400" %}
        {% elif state == "awaiting" %}
            {% set badge_classes = "border-indigo-200 bg-indigo-50 text-indigo-700" %}
            {% set accent_border = "border-t-indigo-400" %}
        {% elif state == "cancelled" %}
            {% set badge_classes = "border-orange-200 bg-orange-50 text-orange-700" %}
            {% set accent_border = "border-t-orange-400" %}
        {% else %}
            {% set badge_classes = "border-slate-200 bg-slate-50 text-slate-600" %}
            {% set accent_border = "border-t-slate-300" %}
        {% endif %}

        <div class="rounded-2xl border border-slate-200 bg-white shadow-sm border-t-4 {{ accent_border }}">
            <div class="flex flex-wrap items-center justify-between gap-3 border-b border-slate-200 px-6 py-4">
                <div>
                    <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Job ID</p>
                    <p class="mt-2 font-mono text-xs text-slate-700">{{ job.id }}</p>
                </div>
                <span class="inline-flex items-center gap-2 rounded-full border px-3 py-1 text-xs font-semibold {{ badge_classes }}">
                    <span class="h-2 w-2 rounded-full bg-current"></span>
                    {{ job.state_name }}
                </span>
            </div>
            <div class="px-6 py-6">
                <dl class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                    <div class="space-y-1">
                        <dt class="text-xs font-semibold uppercase tracking-wider text-slate-500">Task</dt>
                        <dd class="text-sm text-slate-700">
                            <code class="rounded-md bg-slate-100 px-2 py-1 text-xs text-slate-700">{{ job.target_module }}.{{ job.target_function }}</code>
                        </dd>
                    </div>
                    <div class="space-y-1">
                        <dt class="text-xs font-semibold uppercase tracking-wider text-slate-500">State</dt>
                        <dd>
                            <span class="inline-flex items-center rounded-full border px-2.5 py-1 text-xs font-semibold {{ badge_classes }}">{{ job.state_name }}</span>
                        </dd>
                    </div>
                    <div class="space-y-1">
                        <dt class="text-xs font-semibold uppercase tracking-wider text-slate-500">Created At</dt>
                        <dd class="text-sm text-slate-700">{{ job.created_at.strftime('%Y-%m-%d %H:%M:%S %Z') if job.created_at else "" }}</dd>
                    </div>
                    <div class="space-y-1">
                        <dt class="text-xs font-semibold uppercase tracking-wider text-slate-500">Queue</dt>
                        <dd class="text-sm text-slate-700">{{ job.queue }}</dd>
                    </div>
                    <div class="space-y-1">
                        <dt class="text-xs font-semibold uppercase tracking-wider text-slate-500">Retry Count</dt>
                        <dd class="text-sm text-slate-700">{{ job.retry_count }}</dd>
                    </div>
                </dl>

                <div class="mt-6 grid gap-6 lg:grid-cols-3">
                    <div class="space-y-2">
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Arguments</p>
                        <pre class="rounded-xl border border-slate-200 bg-slate-950 p-4 text-xs text-slate-100"><code>{{ args | tojson(indent=4) }}</code></pre>
                    </div>
                    <div class="space-y-2">
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">Keyword Arguments</p>
                        <pre class="rounded-xl border border-slate-200 bg-slate-950 p-4 text-xs text-slate-100"><code>{{ kwargs | tojson(indent=4) }}</code></pre>
                    </div>
                    <div class="space-y-2">
                        <p class="text-xs font-semibold uppercase tracking-wider text-slate-500">State Data</p>
                        <pre class="rounded-xl border border-slate-200 bg-slate-950 p-4 text-xs text-slate-100"><code>{{ state_data | tojson(indent=4) }}</code></pre>
                    </div>
                </div>
            </div>
            <div class="border-t border-slate-200 px-6 py-4">
                <a href="{{ url_for('list_jobs_by_status', status=job.state_name) }}" class="inline-flex items-center rounded-full border border-slate-200 px-4 py-2 text-xs font-semibold text-slate-700 transition hover:border-slate-300 hover:bg-slate-100">
                    Back to list
                </a>
            </div>
        </div>
        {% if history %}
            <div class="mt-6 overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
                <div class="border-b border-slate-200 px-6 py-4">
                    <h2 class="text-sm font-semibold text-slate-800">History</h2>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-slate-200 text-sm">
                        <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-wider text-slate-500">
                            <tr>
                                <th class="px-4 py-3">State</th>
                                <th class="px-4 py-3">Timestamp</th>
                                <th class="px-4 py-3">Data</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            {% for entry in history %}
                                <tr class="align-top">
                                    <td class="px-4 py-3 text-sm text-slate-700">{{ entry.state }}</td>
                                    <td class="px-4 py-3 text-sm text-slate-600">{{ entry.timestamp }}</td>
                                    <td class="px-4 py-3">
                                        <pre class="rounded-lg border border-slate-200 bg-slate-950 p-3 text-xs text-slate-100"><code>{{ entry.data | tojson(indent=2) }}</code></pre>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            Job not found.
        </div>
    {% endif %}
{% endblock %}
